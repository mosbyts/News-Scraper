<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tianna's News Scraper</title>
    <link rel="stylesheet" type="text/css" href="./assets/css/style.css">
    <script src="https://code.jquery.com/jquery.js"></script>
	<script src="./assets/js/news.js"></script>
</head>
<h1 id="header">Latest News From NPR</h1>

<button id="scrape" onclick="location.href = 'localhost:3000/scrape'>Scrape</button>

<div id="noCommentStoryDiv">
    <h2>News Without A Comment:</h2>
        {{#each news}}
            {{#unless comment}}
            {{/unless}}
            <div class="newsStory" data-id={{_id}}>
                <h3>{{headline}}</h3>
                <h5>{{category}}</h5>
                <p>{{summary}}</p>
                <h6><a href={{url}}>{{url}}</a></h6>
            </div>
        {{/each}}
</div>

<div id="commentStoryDiv">
    <h2>News With A Comment:</h2>
        {{#each news}}
            {{#if comment}}
            {{/if}}
            <div class="newsStory" data-id={{_id}}>
                <h3>{{headline}}</h3>
                <h5>{{category}}</h5>
                <p>{{summary}}</p>
                <h6><a href={{url}}>{{url}}</a></h6>
                <button class="delete-comment" data-id="{{this.id}}">X</button>
                <p>{{comment}}</p>
            </div>
        {{/each}}
</div>

<div id="commentsDiv">
    <h3>Comments:</h3>
    <div id="comments"></div>
</div>

<h5 id="footer">Copyright 2019</h5>